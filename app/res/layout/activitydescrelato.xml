<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="desc"
            android:id="@+id/descTextView" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="44dp" android:layout_marginTop="38dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="author"
            android:id="@+id/authorTextView"
            android:layout_below="@+id/descTextView" android:layout_alignLeft="@+id/descTextView"
            android:layout_alignStart="@+id/descTextView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:id="@+id/statusTextView"
            android:layout_below="@+id/authorTextView" android:layout_alignLeft="@+id/authorTextView"
            android:layout_alignStart="@+id/authorTextView"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:layout_below="@+id/authorTextView"
            android:layout_alignLeft="@+id/authorTextView" android:layout_alignStart="@+id/authorTextView"
            android:layout_marginTop="57dp" android:minWidth="200dp" android:minHeight="200dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data: "
            android:id="@+id/dataTextView" android:layout_below="@+id/imageView" android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" android:layout_marginTop="46dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            android:id="@+id/commentButton"
            android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>